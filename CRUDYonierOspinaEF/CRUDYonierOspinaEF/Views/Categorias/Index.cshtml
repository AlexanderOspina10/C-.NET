@model IEnumerable<CRUDYonierOspinaEF.Models.Categoria>

@{
    ViewData["Title"] = "Index";
}

<h1>Categorias</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Crear Categoria</a>
</p>

<form asp-controller="Categorias" asp-action="Index">

    <p>
        Buscar:<input type="text" name="buscar" class="form-text" />
        <input type="submit" value="buscar" class="btn btn-sm btn-dark" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-filtro="@ViewData["FiltroNombre"]">@Html.DisplayNameFor(model => model.Nombre)</a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CodigoCategoria">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CodigoCategoria">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CodigoCategoria">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
